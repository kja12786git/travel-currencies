<% include ./partials/header.ejs %>
<h1>Edit Currency Options</h1>

<h3>Edit country name and matching data...</h3>
<% currencies.forEach(table => { %>

  <form action="<%= `/${table.id}/edit?_method=PUT` %>" method="POST">
  <label for="title">Change information for <b><%= table.country %></b></label><br>
  <input id="title" type="text" name="country" value="<%= table.country %>">

  <br>
  <label>Currency Symbol</label>
  <input id="symbol" type="text" name="symbol" value="<%= table.symbol %>">

  <br>

  <label for="gfxcode">Glyph</label>

  <input id="gfxcode" type="text" name="gfxcode" value="<%= table.gfxcode %>">
  <br>

  <label for="ccode">Country Code</label>

  <input id="ccode" type="text" name="ccode" value="<%= table.ccode %>">
  <br>

  <input type="submit" value="Save changes">

</form>

<form action="<%= `${table.id}?_method=DELETE` %>" method="POST">
  <input type="submit" value="Delete from List" />
</form>

  <hr>
<% }) %>

<h3><a href="../">Return to Home</a></h3>

<% include ./partials/end-plain.ejs %>
