<% include ./partials/header.ejs %>
<h1>Edit Currency Option</h1>

<form action="<%= `/${currencies.id}/edit?_method=PUT` %>" method="POST">
<input id="title" type="text" name="country" value="<%= currencies.country %>">
<p>Currency Symbol: </p>
<input id="symbol" type="text" name="symbol" value="<%= currencies.symbol %>">
<p>Glyph: </p>
<input id="gfxcode" type="text" name="gfxcode" value="<%= currencies.gfxcode %>">
<p>Country Code: </p>
<input id="ccode" type="text" name="ccode" value="<%= currencies.ccode %>">
<br><br>
  <input type="submit" value="Save changes">
</form>
<br>
<form action="<%= `/${currencies.id}?_method=DELETE` %>" method="POST">
  <input type="submit" value="Delete from List" />
</form>

<h3><a href="../">Return to Home</a></h3>

<% include ./partials/end-plain.ejs %>
